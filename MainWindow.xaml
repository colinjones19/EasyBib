<Window x:Class="EasyBib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas x:Name="MainGrid">


        <Label Content="URL: " HorizontalAlignment="Left" Margin="78,213,0,0" VerticalAlignment="Top" Width="33" RenderTransformOrigin="0.513,2.394"/>
        <TextBox   HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="269" Margin="123,213,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.197"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Image Height="185" Source="Image3.png" Stretch="Fill" Width="249" RenderTransformOrigin="0.0,0.0" Margin="148,32,120,102"/>
        <Button x:Name="CreateCit" Content="Create Citation" Canvas.Left="198" Canvas.Top="267" Width="128" Height="18" Click="CreateCit_Click" />
    </Canvas>
</Window>